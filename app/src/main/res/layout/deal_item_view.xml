<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    card_view:cardElevation="@dimen/card_elevation"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/relative_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/dealIcon"
                android:padding="@dimen/deal_padding"
                android:src="@drawable/map"
                android:layout_width="@dimen/deal_list_img"
                android:layout_height="@dimen/deal_list_img" />
            <TextView android:textSize="@dimen/title_text_size"
                android:textColor="@color/titleText"
                android:id="@+id/titleText"
                tools:text="Hello world"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/deal_item_margin"
                android:layout_marginTop="@dimen/deal_item_margin"
                android:layout_toRightOf="@id/dealIcon" />
            <TextView android:textSize="@dimen/desc_text_size"
                android:textColor="@color/descText"
                android:id="@+id/descText"
                tools:text="Hello world"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/deal_item_margin"
                android:layout_marginTop="@dimen/deal_item_margin"
                android:layout_toRightOf="@id/dealIcon"
                android:layout_below="@id/titleText" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>