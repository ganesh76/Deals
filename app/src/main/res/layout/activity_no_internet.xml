<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/border_color"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_150sdp"

        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/cloud_wifi_100"
            android:layout_margin="@dimen/_5sdp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/relativeLayout1"
            android:layout_margin="@dimen/_5sdp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:text="@string/nonet_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15sdp"
                android:gravity="center"
                android:layout_margin="@dimen/_5sdp"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:textColor="#000">

            </TextView>


            <TextView
                android:text="@string/please_check_internet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:gravity="center"
                android:layout_margin="@dimen/_5sdp"
                android:layout_gravity="center"
                >

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:layout_gravity="center_horizontal">

            <TextView
                android:text="@string/nonet_set"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_11sdp"
                android:layout_weight="1"
                android:id="@+id/nonet_set_tv"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:textStyle="bold"
                style="?android:attr/borderlessButtonStyle"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/button_background"
                android:textColor="@color/white">

            </TextView>

            <TextView
                android:text="@string/nonet_try"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_11sdp"
                android:layout_weight="1"
                android:id="@+id/nonet_try_tv"
                android:gravity="center"
                style="?android:attr/borderlessButtonStyle"
                android:textStyle="bold"
                android:padding="@dimen/_10sdp"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/button_background"
                android:textColor="@color/white">

            </TextView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>